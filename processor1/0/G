        type            MarshakRadiation;
        T               T;
        value           nonuniform 0;
    }
    inletPilot
    {
        type            MarshakRadiation;
        T               T;
        value           nonuniform 0;
    }
    inletAir
    {
        type            MarshakRadiation;
        T               T;
        value           uniform 0;
    }
    outlet
    {
        type            MarshakRadiation;
        T               T;
        value           uniform 0;
    }
    axis
    {
        type            empty;
    }
    frontAndBack_pos
